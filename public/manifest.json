  "display": "standalone",
  "background_color": "#0f1c2e",
  "theme_color": "#3498db",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "dir": "ltr",
  "categories": ["games", "entertainment"],
  "icons": [
